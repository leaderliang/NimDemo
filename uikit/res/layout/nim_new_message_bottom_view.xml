<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_message_tip_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:background="@drawable/nim_new_message_bottom_bg_shape"
    android:gravity="center_vertical|center"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="@dimen/dp_size_3"
    android:paddingRight="10dp"
    android:paddingBottom="3dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_size_6"
        android:contentDescription="@string/empty"
        android:src="@drawable/nim_new_message_direction_down_icon" />

    <TextView
        android:id="@+id/new_message_tip_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_fffe8a02"
        android:textSize="12sp"
        tools:text="6条新消息" />

</LinearLayout>